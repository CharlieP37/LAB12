@{
    ViewData["Title"] = "Main";
}

<head>
    <link href="~/css/GameMain.css" rel="stylesheet" />
</head>

<script>
    function handleKeyPress(event) {
        if (event.keyCode === 13) {
            window.location.href = '/Home/GameChat';
        } else if (event.keyCode === 27)
        { 
            window.location.href = '/Home/Tienda';
        }
    }

    document.addEventListener('keydown', handleKeyPress);
</script>

