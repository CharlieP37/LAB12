@{
    ViewData["Title"] = "Chat";
}

<head>
    <link href="~/css/GameChat.css" rel="stylesheet" />
</head>

<script>
    function handleKeyPress(event) {
        if (event.keyCode === 27) {
            window.location.href = '/Home/GameMain';
        }
    }

    document.addEventListener('keydown', handleKeyPress);
</script>